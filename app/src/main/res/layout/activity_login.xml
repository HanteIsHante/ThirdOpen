<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hante.thirdopen.useractivity.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar_login"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"/>
    <TextView
        android:text="登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        tools:ignore="HardcodedText,MissingConstraints"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="@+id/toolbar_login"
        app:layout_constraintRight_toRightOf="@+id/toolbar_login"
        app:layout_constraintTop_toTopOf="@+id/toolbar_login"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_login"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="112dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/textInputLayout3"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号"
            style="@android:style/Widget.DeviceDefault.EditText"
            tools:ignore="HardcodedText"
            android:id="@+id/username"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toRightOf="@+id/textInputLayout3"
        android:layout_marginStart="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:id="@+id/textInputLayout4">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            tools:ignore="HardcodedText,TextFields"
            android:id="@+id/password"
            android:inputType=""/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:text="登录验证"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_login"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"
        android:layout_marginEnd="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="60dp"
        android:layout_marginStart="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp"
        tools:ignore="HardcodedText"
        tools:text="登录验证"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:textColor="@android:color/background_light"
        android:background="@drawable/bt_bg"/>

    <TextView
        android:text="注册"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/to_register"
        app:layout_constraintRight_toRightOf="@+id/textInputLayout4"
        android:textSize="14sp"
        android:textColor="?attr/actionModeSplitBackground"
        tools:ignore="HardcodedText,MissingConstraints"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/button_login"/>

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        tools:ignore="MissingConstraints"
        android:textColor="@android:color/holo_purple"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="80dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="67dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        android:textSize="25sp"
        app:layout_constraintVertical_bias="0.52"/>


</android.support.constraint.ConstraintLayout>
